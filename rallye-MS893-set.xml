<?xml version="1.0"?>
<!--
an attempt to model the Socata Rallye MS-893E

Sounds are from the Xplane Rallye by Beber, as well as some texture bits ( wheels )
Most of the instruments are borrowed to the Instruments-3d collection
and most of the configuration files are modified from other aircrafts of various authors
-->

<PropertyList>
 <sim>

	<description>Socata Rallye MS893E</description>
	<author>Patrice Poly "WooT" ( 3D, FDM ) Beber ( Sounds ) Gabriel Hernandez (New sounds, Lights, Liveries, Systems etc, current development) </author>

	<flight-model>yasim</flight-model>
	<aero>rallye-MS893</aero>
        <aircraft-version>0.5</aircraft-version>
	<fuel-fraction>0.8</fuel-fraction>

       <rating>
          <FDM type="int">3</FDM>
          <systems type="int">1</systems>
          <cockpit type="int">3</cockpit>
          <model type="int">4</model>
        </rating>
        
	<startup>
		<splash-texture>Aircraft/rallye-MS893/splash.png</splash-texture>
		<splash-title>Socata Rallye MS-893E</splash-title>
	  </startup>

	<systems>
	 <electrical>
		 <path>Aircraft/rallye-MS893/Systems/rallye-electrical.xml</path>
	 </electrical>
	</systems>
	
	<instrumentation>
		<path>Aircraft/rallye-MS893/Systems/rallye-instrumentation.xml</path>
	</instrumentation>

	<sound>
		<path>Aircraft/rallye-MS893/Sounds/rallye-MS893-sound.xml</path>
	</sound>

	<panel>
	 <visibility archive="n">false</visibility>
	</panel>

	<model>
	 <path archive="y">Aircraft/rallye-MS893/Models/rallye-MS893.xml</path>
	</model>

<menubar>
      <default>
          <menu n="10">
              <label>Socata</label>
              <enabled type="bool">true</enabled>
              <item>
                <name>livery</name>
                <label>Select Livery</label>
                <binding>
                  <command>nasal</command>
                  <script>
                    aircraft.livery.dialog.open();
                  </script>
                </binding>
              </item>   
            <item>
			<name>lights</name>
			<label>Lights</label>
				<binding>
					<command>nasal</command>
					<script>
						var lights = gui.Dialog.new("sim/gui/dialogs/lights/dialog", "Aircraft/rallye-MS893/Systems/lights-dlg.xml");
						lights.open();
					</script>
				</binding>
		  </item>

          </menu>
      </default>
  </menubar>


